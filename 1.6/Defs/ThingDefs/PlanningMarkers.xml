<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef>
    <defName>LOSOverlay_ObserverMarker</defName>
    <label>LOS observer</label>
    <description>An observer point for the LOS overlay. Select to view LOS and toggle modes.</description>
    <thingClass>LOSOverlay.PlanningMarker</thingClass>
    <category>Building</category>
    <selectable>true</selectable>
    <!-- RealtimeOnly bypasses the fog mesh system â€” the marker stays visible
         in fogged cells because we're drawing it directly each frame, not baking
         it into the map mesh which gets occluded by fog. -->
    <drawerType>RealtimeOnly</drawerType>
    <altitudeLayer>MetaOverlays</altitudeLayer>
    <passability>Standable</passability>
    <fillPercent>0</fillPercent>
    <rotatable>false</rotatable>
    <useHitPoints>false</useHitPoints>
    <neverMultiSelect>false</neverMultiSelect>
    <building>
      <isEdifice>false</isEdifice>
    </building>
    <graphicData>
      <texPath>UI/Designators/LOSObserver</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <color>(0.2, 0.8, 1.0, 0.7)</color>
    </graphicData>
    <size>(1,1)</size>
    <comps />
  </ThingDef>
</Defs>
